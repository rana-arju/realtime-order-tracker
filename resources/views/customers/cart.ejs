
<section class="cart-page">
<% if (session.cart) { %>
        <div class="container mx-auto orders my-2 py-8 w-1/2">
          <div class="flex items-center border-b border-gary-300 pb-4">
              <img src="/images/cart-black.png" alt="">
              <h2 class="font-bold ml-4 text-lg md:text-2xl capitalize">order summary</h2>
          </div>
          <div class="order-list my-5">
            <% for( let food of Object.values(session.cart.items)) { %>
                <div class=" flex items-center my-5">
                    <img src="/images/<%= food.item.image %>" alt="" class="w-24">
                    <div class="ml-4 flex-1">
                        <h2 class="text-xl capitalize"><%= food.item.name %></h2>
                        <span class="text-xs uppercase text-gray-500"><%= food.item.size %></span>
                    </div>
                    <span class="flex-1"><%= food.qty %> pcs</span>
                    <span class="font-bold">$ <%= food.item.price * food.qty %></span>
                </div>
             
            <% } %>
            <hr />
          </div>
          <div class="text-right py-4">
            <h2 class="text-lg font-bold">Total amount: <span class="col-text">$ <%= session.cart.totalPrice %></span></h2>
            <div class="my-5">
                <form action="/orders" method="POST">
                    <% if (user) { %>
                    <input name="name" type="text" value="<%= user.name %>" class="border border-2 border-[#FE5F1E] py-2 px-4 w-full md:w-1/2 rounded-full my-2 focus:outline-none focus:border-[#FE5F1E] " placeholder="Your Name">
                    <input name="phone" type="text" class="border border-2 border-[#FE5F1E] py-2 px-4 w-full md:w-1/2 rounded-full my-2 focus:outline-none focus:border-[#FE5F1E]" placeholder="Phone Number">
                    <input name="address" type="text" class="border border-2 border-[#FE5F1E] py-2 px-4 w-full md:w-1/2 rounded-full my-2 focus:outline-none focus:border-[#FE5F1E]" placeholder="Your Address">
                    
                        <button type="submit" class=" text-white font-bold uppercase border border-2 border-[#FE5F1E] py-2 px-4 w-full md:w-1/2 rounded-full my-2 bg-[#FE5F1E]">Order Now</button>
                    <% } else { %>
                        <a href="/login" class="inline-block text-white text-sm md:text-lg md:font-bold uppercase border border-2 border-[#FE5F1E] py-2 sm:px-2 md:px-4 w-full md:w-1/2 rounded-full my-2 bg-[#FE5F1E] text-center">Login to continue</a>
                    <% } %>
                   
                </form>
            </div>
          </div>
           
        </div>
        <% }else {%>
    <div class="empty-cart my-2 py-12">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold mb-2 capitalize">cart Empty üôÅ</h2>
            <p class="text-lg text-gray-500">You Probbably haven't ordered a pizza yet.<br /> to order a pizza, go to the main page</p>
            <img src="/images/empty-cart.png" alt="" class="w-2/5 mx-auto mt-5">
            <a href="/" class="inline-block px-6 py-2 rounded-full text-white font-bold mt-12 btn-primary">Go Back</a>
        </div>
    </div>
    <% } %>
    

</section>