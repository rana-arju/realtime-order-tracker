<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- google font added -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">
    <!-- main css file added -->
    <link rel="stylesheet" href="/css/app.css">
    <!-- application title -->
    <title>Are you hungry? Order pizza!</title>
</head>
<body>
    <!-- Navbar Menu -->
    <nav class="mx-auto container flex  items-center justify-between py-4">
        <div>
            <img src="/images/logo.png" alt="">
        </div>
        <div>
            <ul class="flex items-center">
                <li class="mx-4 capitalize"><a href="/">Menu</a></li>
                <li class="mx-4 capitalize"><a href="#">offers</a></li>
                <% if (user) { %>
                    <li class="mx-4 capitalize">
                        <form id="logout" action="/logout" method="POST">
                            <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                        </form>
                <% }else{ %>
                <li class="mx-4 capitalize"><a href="/registration">Register</a></li>
                <li class="mx-4 capitalize"><a href="/login">Login</a></li>
                <% } %>
                <li class="mx-4 capitalize"><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                <span class="text-white font-bold pr-2 cartCounter"><%= session.cart ? session.cart.totalQty : " " %></span>
                <img src="/images/cart.png" alt=""></a>
            </li>
            </ul>
        </div>
    </nav>
    <%- body %>
    
    <!-- Javascript File Added -->
    <script src="/js/app.js"></script>
</body>
</html>